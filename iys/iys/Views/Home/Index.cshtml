<div style="background-color: #FFF">
    <div class="container">
        <div class="content">
            @Html.DevExpress().ImageSlider(
            settings =>
            {
                settings.Name = "imageSlider";
                settings.EnableTheming = false;
                settings.Width = System.Web.UI.WebControls.Unit.Pixel(962);
                settings.Height = System.Web.UI.WebControls.Unit.Pixel(313);
                settings.NavigateUrlFormatString = "javascript:void({0});";

                settings.SettingsImageArea.ImageSizeMode = ImageSizeMode.FillAndCrop;
                settings.SettingsImageArea.NavigationButtonVisibility = ElementVisibilityMode.None;
                settings.SettingsImageArea.ItemTextVisibility = ElementVisibilityMode.Always;
                settings.SettingsImageArea.EnableLoopNavigation = true;
                settings.SettingsNavigationBar.Mode = NavigationBarMode.Dots;

                settings.SettingsSlideShow.AutoPlay = options.AutoPlay;
                settings.SettingsSlideShow.Interval = options.Interval;
                settings.SettingsSlideShow.PausePlayingWhenMouseOver = options.PausePlayingWhenMouseOver;
                settings.SettingsSlideShow.PlayPauseButtonVisibility = options.PlayPauseButtonVisibility;
                settings.SettingsSlideShow.StopPlayingWhenPaging = options.StopPlayingWhenPaging;

                settings.Items.Add(
                    item =>
                    {
                        item.ImageUrl = Url.Content("~/Content/Images/widescreen/slider1.jpg");
                        item.NavigateUrl = "1";
                        item.SetTextTemplateContent(
                            "<h3 class='isdemoH3'>Faaliyetlerimiz</h3>" +
                            "<p>Saha incelemelerine hem yurt içi hem yurt dışında devam ediyoruz.</p>"
                        );
                    }
                );
                settings.Items.Add(
                    item =>
                    {
                        item.ImageUrl = Url.Content("~/Content/Images/widescreen/slider2.jpg");
                        item.NavigateUrl = "2";
                        item.SetTextTemplateContent(
                            "<h3 class='isdemoH3'>Danimarka</h3>" +
                            "<p>Saha incelerimizin bir ayağında Danimarka`daydık.</p>"
                        );
                    }
                );
                settings.Items.Add(
                    item =>
                    {
                        item.ImageUrl = Url.Content("~/Content/Images/widescreen/slider3.jpg");
                        item.NavigateUrl = "3";
                        item.SetTextTemplateContent(
                            "<h3 class='isdemoH3'>Metiskop</h3>" +
                            "<p>Proje çalışmalarımıza başladık.</p>"
                        );
                    }
                );
                settings.Items.Add(
                    item =>
                    {
                        item.ImageUrl = Url.Content("~/Content/Images/widescreen/slider4.jpg");
                        item.NavigateUrl = "4";
                        item.SetTextTemplateContent(
                            "<h3 class='isdemoH3'>Proje Tanıtımı</h3>" +
                            "<p>İzmit Ticaret Odası`ndaki toplantıda projemizi sunduk.</p>"
                        );
                    }
                );
