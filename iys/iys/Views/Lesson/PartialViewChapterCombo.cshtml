@model System.Collections.IEnumerable

@Html.DevExpress().ComboBox(settings =>
{
    settings.CallbackRouteValues = new { Controller = "Lesson", Action = "PartialViewChapterCombo" };
    settings.Name = "CODE_CHAPTER";

    settings.Properties.DataSource = ViewData["CODE_CHAPTER"];
    settings.Properties.TextField = "Value";
    settings.Properties.ValueField = "Key";
    settings.Properties.ValueType = typeof(int);

    settings.Properties.EnableSynchronization = DefaultBoolean.False;
    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;

    settings.Properties.ClientSideEvents.BeginCallback = "ChapterCombo_BeginCallback";
}).BindList(Model).Bind(ViewData["CODE_CHAPTER"]).GetHtml()

